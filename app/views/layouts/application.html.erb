<!DOCTYPE html>
<html>
  <head>
    <title>Grammable</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">

  </head>

  <body>

    <div class="navbar fixed-top">
      <div class = "container">
          <div class="brand float-left">
            Grammable
          </div>
          <div class="add float-right">
            <% if current_user %>
              Welcome, <%= current_user.email %>.&nbsp;&nbsp;
              <%= link_to "New Gram", new_gram_path, class: 'btn btn-secondary' %> &nbsp;&nbsp;
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to "Log In", new_user_session_path %>
              <%= link_to "Sign Up", new_user_registration_path %>
            <% end %>
          </div>
        <br class="clear-fix" />
      </div>
    </div>


    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
